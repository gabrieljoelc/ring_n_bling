= form_for @bling_point do |f|
  - if @bling_point.errors.any?
    #error-explanation
      %h2= "#{pluralize(@bling_point.errors.count, 'error')} prohibited this bling_point from being saved:"
      %ul
        - @bling_point.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :value
    = f.number_field :value
  .actions
    = f.submit 'Save'
